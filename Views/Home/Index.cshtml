@model IEnumerable<PajoPhone.Models.PhoneModel>

@{
    ViewData["Title"] = "Home Page";
    var currentFilter = ViewData["CurrentFilter"] as string;
    var minPrice = ViewData["MinPrice"] as decimal?;
    var maxPrice = ViewData["MaxPrice"] as decimal?;
    var targetPrice = ViewData["TargetPrice"] as decimal?;
    var numberOfNearest = ViewData["NumberOfNearest"] as int?;
}

<div class="container">
    <h2 class="title">Main Page</h2>
    <form method="get" action="@Url.Action("Index", "Home")">
        <input type="text" name="searchString" value="@currentFilter" placeholder="Search by name..."/>
        <br/>
        <label for="minPrice">Price Range:</label>
        <input type="number" name="minPrice" step="0.01" min="0" value="@minPrice" placeholder="Min Price"/>
        <input type="number" name="maxPrice" step="0.01" min="0" value="@maxPrice" placeholder="Max Price"/>
        <br/>
        <label for="targetPrice">Nearest Price:</label>
        <input type="number" name="targetPrice" step="0.01" min="0" value="@targetPrice" placeholder="Target Price"/>
        <label for="numberOfNearest">Number of Nearest:</label>
        <input type="number" name="numberOfNearest" min="1" value="@numberOfNearest" placeholder="Number"/>
        <button type="submit">Search</button>
    </form>
    <div class="grid">
        @foreach (var phone in Model)
        {
            <a href="@Url.Action("Detail", "Home", new { id = phone.Id })" class="grid-item">
                @if (phone.ImageData != null && phone.ImageData.Length > 0)
                {
                    var base64Image = Convert.ToBase64String(phone.ImageData);
                    var imgSrc = $"data:image/jpeg;base64,{base64Image}";
                    <img src="@imgSrc" alt="Image" class="phone-image"/>
                }
                else
                {
                    <img src="@Url.Content("/Images/DefaultPhone.png")" alt="@phone.Name" class="phone-image"/>
                }
                <div class="phone-info">
                    <p class="phone-name">@phone.Name</p>
                    <p class="phone-price">@phone.Price.ToString("C")</p>
                </div>
            </a>
        }
    </div>
</div>

<style>
    .container {
        padding: 20px;
    }
    .title {
        text-align: right;
        margin-bottom: 20px;
        font-size: 24px;
        color: black;
    }
    .grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }
    .grid-item {
        border: 1px solid black;
        border-radius: 5px;
        overflow: hidden;
        width: calc(33.333% - 20px);
        box-sizing: border-box;
        background: transparent;
        text-decoration: none;
        color: inherit;
    }
    .phone-image {
        width: 100%;
        height: auto;
        display: block;
    }
    .phone-info {
        padding: 10px;
        text-align: center;
        color: black;
        background: transparent;
    }
    .phone-name, .phone-price {
        margin: 0;
        font-size: 18px;
    }
</style>