@model PajoPhone.Models.PhoneModel

@{
    ViewData["Title"] = "PhoneModel Details";
}

<div class="container">
    <h2>@Model.Name</h2>
    <img src="@Url.Content(Model.ImagePath)" alt="@Model.Name" />
    <p><strong>Price:</strong> @Model.Price.ToString("C0")</p>
    <p><strong>Color:</strong> @Model.Color</p>
    <p><strong>Description:</strong> @Model.Explanations</p>
</div>

<style>
    .container {
        padding: 20px;
    }
    img {
        max-width: 100%;
        height: auto;
    }
</style>