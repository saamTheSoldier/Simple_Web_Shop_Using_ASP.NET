@model PajoPhone.Models.PhoneModel

<h2>Delete PhoneModel</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PhoneModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Explanations</dt>
        <dd>@Model.Explanations</dd>
        <dt>Color</dt>
        <dd>@Model.Color</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
        
        
        <dt>Image</dt>
        <dd>
            <img src="@Url.Content(Model.ImagePath)" alt="PhoneModel Image" style="max-width: 200px; max-height: 200px;" />
        </dd>
        
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "AdminPanel", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Delete</button> 
        @Html.ActionLink("Back to List", "AdminPanel")
    }
</div>