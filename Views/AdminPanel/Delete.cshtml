@model PajoPhone.Models.PhoneModel

<h2>Delete Phone</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Phone</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Explanations</dt>
        <dd>@Model.Explanations</dd>
        <dt>Color</dt>
        <dd>@Model.Color</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "AdminPanel", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Delete</button> 
        @Html.ActionLink("Back to List", "AdminPanel")
    }
</div>