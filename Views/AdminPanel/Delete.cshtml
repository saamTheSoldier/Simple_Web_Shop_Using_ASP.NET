@model PajoPhone.Models.PhoneModel

<h2>ShowDeleteConfirmation PhoneModel</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PhoneModel</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Explanations</dt>
        <dd>@Model.Explanations</dd>
        <dt>Color</dt>
        <dd>@Model.Color</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>


        <dt>Image</dt>
        <dd>
            @* <img src="@Url.Content(Model.ImagePath)" alt="PhoneModel Image" style="max-width: 200px; max-height: 200px;" /> *@
            @if (Model.ImageData != null && Model.ImageData.Length > 0)
            {
                var base64Image = Convert.ToBase64String(Model.ImageData);
                var imgSrc = $"data:image/jpeg;base64,{base64Image}";
                <img src="@imgSrc" alt="Image"/>
            }
            else
            {
                <img src="@Url.Content("/Images/DefaultPhone.png")" alt="@Model.Name"/>
            }
        </dd>

    </dl>

    @using (Html.BeginForm("ProcessDelete", "AdminPanel", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">ShowDeleteConfirmation</button>
        @Html.ActionLink("Back to List", "AdminPanel")
    }
</div>